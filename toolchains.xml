<?xml version="1.0" encoding="UTF-8"?>
<!--
  toolchains.xml (saved in project root as requested).

  IMPORTANT: Edit the <jdkHome> below to point to your local JDK 17 installation.
  Typical Windows locations:
    C:\\Program\ Files\\Eclipse\ Adoptium\\jdk-17\.0\.16\.8-hotspot
    C:\Program Files\Eclipse Adoptium\jdk-17.0.x-hotspot

  To make Maven use this file globally, copy it to:
    %USERPROFILE%\.m2\toolchains.xml

  Then build with the profile that was added to the pom.xml:
    mvn -Puse-toolchains -DskipTests package
-->
<toolchains>
  <toolchain>
    <type>jdk</type>
    <provides>
      <version>17</version>
      <vendor>temurin</vendor>
    </provides>
    <configuration>
      <!-- UPDATE THIS PATH to your JDK 17 installation -->
    <jdkHome>C:\Program Files\Eclipse Adoptium\jdk-17.0.16.8-hotspot</jdkHome>
    </configuration>
  </toolchain>
</toolchains>

